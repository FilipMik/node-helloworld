{{#if user}}
<div class="row">
    <form method="post" action="/city">
        <div class="col s9 input-field">
            <input id="cityInput" name="city" type="text"/>
            <label for="cityInput">City: </label>
        </div>
        <div class="col s3">
            <button class="btn btn-default">Add new city</button>
        </div>
    </form>
</div>
<div class="row">
    {{#each cities}}
        <div class="col m3 s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                            <span class="card-title">
                                <a href="/detail/{{_displayName}}">{{_displayName}}</a>
                            </span>
                    <p>{{_temperature}} Celsius degree</p>
                    <form method="post" action="/city/delete">
                        <input name="city" type="hidden" value="{{_displayName}}"/>
                        <button type="submit" class="btn-floating halfway-fab waves-effect waves-light red"><i
                                class="material-icons">delete</i></button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
{{else}}
    <div class="row">
        You need to log in first.
    </div>
{{/if}}
